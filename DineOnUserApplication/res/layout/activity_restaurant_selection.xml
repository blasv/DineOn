<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_weight="2"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/restaurantList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/restaurantSelectionButtons"
            android:name="uw.cse.dineon.user.restaurantselection.RestaurantListFragment" >
        </fragment>

        <fragment
            android:id="@+id/restaurantSelectionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:name="uw.cse.dineon.user.restaurantselection.RestaurantSelectionButtonsFragment" />
    </RelativeLayout>

    <fragment
        android:id="@+id/restaurantInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:name="uw.cse.dineon.user.restaurantselection.RestaurantInfoFragment" >
    </fragment>

</LinearLayout>