<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:id="@+id/tablelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_place_order"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical" >

        <!-- 2 columns -->

        <TableRow
            android:id="@+id/tableRow_order_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/label_order_total"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Order Total:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/value_order_total"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="0.00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <!-- edittext span 2 column -->

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/label_order_tax"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Tax"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/value_order_tax"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="0.00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <!-- 3 columns -->

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/label_tip"
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:text="@string/label_tip"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <!-- display this button in 3rd column via layout_column(zero based) -->

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/label_final_total"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Final Total:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/value_final_total"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="0.00"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>
    </TableLayout>

</RelativeLayout>